.footer
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    min-height 53px
    background-color footer-background
    color principal-color
    letter-spacing 0.5rem
    font-size 1.6rem
    font-weight 500
    fonts(secondary-font)
    .footer__social 
        list-style none
        display flex
        margin 10px auto
        flex-direction row
        justify-content center
        align-items center
    .footer__social li
        margin 0 10px